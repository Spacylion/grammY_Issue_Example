{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "newLine": "lf",
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUncheckedIndexedAccess": true,
        "noUnusedParameters": true,
        "strict": true,
        "module": "CommonJS", // instead of  "module": "ESNext", as it is described on  https://grammy.dev/hosting/heroku#prerequisites
        "target": "ESNEXT",
        "moduleResolution": "node",
        "outDir": "./dist",
        "skipLibCheck": true
    }
}
